{% extends "searchbase.html.j2" %}
{% block app_content %}

    <h1>Some tags you want not to see</h1>
    {% for ban_tag in ban_tags %}
        <form method="post" action="{{ url_for('delete_ban_tag', ban_tag_id=ban_tag.id) }}">
            <button type="submit">X</button>
        </form>
        <p>{{ ban_tag.tag.name }}</p>
    {% endfor %}

{% endblock %}
