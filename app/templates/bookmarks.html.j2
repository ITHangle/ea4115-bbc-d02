{% extends "navigation_bar.html.j2" %}
{% block head %}
    {{ super() }}
    <style>
        body {
            background-color: #1a1a1a;
            color: #f2f2f2;
            font-family: Arial, sans-serif;
        }

        .profile {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .profile img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .card {
            display: flex;
            flex-direction: row;
            background-color: #333;
            border: none;
            margin-bottom: 20px;
            max-height: 500px;
            overflow: auto;
        }

        .card:nth-child(even) {
            flex-direction: row-reverse;
        }

        .card-img-top {
            width: 30%;
            height: 200px;
            object-fit: conta;
        }

        .card-body {
            width: 50%;
            padding: 20px;
            flex-grow: 1;
        }

        .card-title {
            font-size: 20px;
            margin-bottom: 10px;
        }

        .card-title a {
            color: #f2f2f2;
            text-decoration: none;
        }

        .card-text {
            margin-bottom: 10px;
        }

        .btn {
            color: #f2f2f2;
            border: none;
            padding: 10px 20px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .d-flex {
            display: flex;
            gap: 10px;
        }
        .content {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            width: 80%;
            margin: 0 auto;
        }

        .profile, .news-list {
            flex: 1 1 500px;
            margin: 20px;
        }
    </style>
{% endblock %}
{% import 'bootstrap/wtf.html' as wtf %}
{% block app_content %}
    <h1>My Bookmarks</h1>
    <ul>
        {% for news in bookmarked_news %}
            <li>
                <a href="{{ url_for('news_detail', news_id=news.id) }}">{{ news.title }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
