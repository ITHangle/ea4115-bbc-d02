{% extends "searchbase.html.j2" %}
{% block app_content %}
{% import 'bootstrap/wtf.html' as wtf %}
    {% if news.image %}
        <img class="card-img-top" src="{{ url_for('picture', news_id=news.id) }}" alt="News image">
    {% endif %}
    <h1>{{ news.title }}</h1>
    <p>{{ news.content }}</p>
    <p>Liked：{{ news.number_like }}</p>  
    {{ wtf.quick_form(like_form) }}  
    {% if form %}
        {{ wtf.quick_form(form) }}
        <br/>
    {% endif %}
    {% for post in posts %}
        {% include "_post.html.j2" %}
    {% endfor %}
    <nav aria-label="...">
        <ul class="pager">
            <li class="previous{% if not prev_url %} disabled{% endif %}">
                <a href="{{ prev_url or '#' }}">
                    <span aria-hidden="true">←</span> {{ _('Newer posts') }}
                </a>
            </li>
            <li class="next{% if not next_url %} disabled{% endif %}">
                <a href="{{ next_url or '#' }}">
                    {{ _('Older posts') }} <span aria-hidden="true">→</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}
